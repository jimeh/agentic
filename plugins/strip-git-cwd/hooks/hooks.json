{
  "description": "Strip redundant git -C <cwd> from Bash commands",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/strip-git-cwd.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
